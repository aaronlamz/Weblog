name: Deploy to gh-pages

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout (current repo)
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Setup pnpm
        uses: pnpm/action-setup@v4
        with:
          version: 9
          run_install: false

      - name: Get pnpm store directory
        id: pnpm-cache
        shell: bash
        run: echo "STORE_PATH=$(pnpm store path)" >> $GITHUB_OUTPUT

      - name: Setup pnpm cache
        uses: actions/cache@v4
        with:
          path: ${{ steps.pnpm-cache.outputs.STORE_PATH }}
          key: ${{ runner.os }}-pnpm-store-${{ hashFiles('**/pnpm-lock.yaml') }}
          restore-keys: |
            ${{ runner.os }}-pnpm-store-

      - name: Install deps
        run: pnpm install --frozen-lockfile

      - name: Build (Next export with base path)
        env:
          BASE_PATH: /${{ github.event.repository.name }}
          NEXT_PUBLIC_SITE_URL: https://aaronlamz.github.io
        run: pnpm run build

      - name: Post-export fixes (Default locale at root + nojekyll)
        run: |
          # 从配置文件中读取默认语言设置
          DEFAULT_LOCALE=$(node -e "
            const siteConfig = require('./src/config/site.config.ts');
            console.log(siteConfig.siteConfig.i18n.defaultLocale);
          " 2>/dev/null || echo "zh")
          
          echo "Default locale detected: $DEFAULT_LOCALE"
          
          # 将默认语言版本复制到根目录（无语言前缀）
          if [ -d "out/$DEFAULT_LOCALE" ]; then
            echo "Copying $DEFAULT_LOCALE version to root directory..."
            rsync -a out/$DEFAULT_LOCALE/ out/
          else
            echo "Warning: Default locale directory out/$DEFAULT_LOCALE not found"
          fi
          
          # 避免 GitHub Pages 的 Jekyll 忽略下划线目录
          touch out/.nojekyll

      - name: Deploy to gh-pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./out
          publish_branch: gh-pages
          force_orphan: true